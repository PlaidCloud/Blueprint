{
    "name"    : "playground",

    "include" :
    [
    {
        "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
    ],

    "let" :
    {
        "APPLICATION"  : "playground",
        "QOOXDOO_PATH" : "../../../../../qooxdoo-1.2-sdk/",
        "CACHE"        : "${TMPDIR}/cache",
        "QXTHEME"      : "qx.theme.Modern",
        "LOCALES"      : [ "en", "de" ],
        "TEST_INCLUDE"   : "${APPLICATION}.*",
        "ROOT"         : "."
    },

    "jobs" :
    {
        "libraries" : 
        {
            "library" :
            [
            {
                "manifest"   : "../../framework/blueprint/Manifest.json",
                "namespace"  : "blueprint"
            }
            ]
        },
        
        "build-script" :
        {

            "include" :     
            [
            "${APPLICATION}.*",
            "qx.*",
            "blueprint.*"
            ],
            "exclude" :
            [
            "qx.test.*",
            "qx.dev.unit.*"
            ],

            "variants" :
            {
                "=qx.debug" : ["on"]
            },
            "code" :
            {
                "optimize" : ["basecalls", "privates", "strings"]
            }
        },

        "source" :
        {

            "include" :     
            [
            "${APPLICATION}.*",
            "qx.*",
            "blueprint.*"
            ],
            "exclude" :
            [
            "qx.test.*",
            "qx.dev.unit.*"
            ],

            "variants" :
            {
                "=qx.debug" : ["on"]
            }
        }
    }
}
