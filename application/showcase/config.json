{
    "name"    : "showcase",

    "include" :
    [
	    {
    	    "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
	    }
    ],

    "export" :
    [
		"api",
		"api-data",
		"build",
		"clean",
		"distclean",
		"fix",
		"info",
		"inspector",
		"lint",
		"migration",
		"pretty",
		"profiling",
		"source",
		"source-all",
		"simulation-build",
		"simulation-run",
		"test",
		"test-source",
		"translation"
    ],

    "default-job" : "source",

    "let" :
    {
        "APPLICATION"  : "showcase",
        "QOOXDOO_PATH" : "../../../qooxdoo-1.5-sdk",
        "QXTHEME"      : "showcase.theme.Theme",
        "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
        "LOCALES"      : [ "en" ],
        "CACHE"        : "${TMPDIR}/cache",
        "ROOT"         : "."
    },

    "jobs" :
    {
        "libraries" : 
        {
            "library" :
            [
				{
					"manifest"   : "../../framework/blueprint/Manifest.json",
					"namespace"  : "blueprint"
				}
            ]
        },
        "source" :
        {
            "extend" : ["common"],
            "include" : ["blueprint.*", "qx.util.*"]
        },
        "source-script" :
        {
            "compile-options" :
            {
                "uris" :
                {
                    "add-nocache-param" : false
                }
            }
        },
        "build" :
        {
            "extend" : ["common"],
            "include" : ["blueprint.*", "qx.util.*"]
        }
    }
}
