{
  "name"    : "designer",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-hybrid",
    "simulation-build",
    "simulation-run",
    "test",
    "test-source",
    "translation"
  ],
  
  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "designer",
    "QOOXDOO_PATH" : "../../../qooxdoo-1.5-sdk",
    "QXTHEME"      : "designer.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },
  "jobs" :
  {
    "libraries" : 
    {
      "library" :
      [
          {
              "manifest"   : "../../framework/blueprint/Manifest.json",
              "namespace"  : "blueprint"
          },
          {
              "manifest"   : "../../../PlaidTools/fugue/Manifest.json",
              "namespace"  : "fugue"
          }
      ]
    },
    "source" :
    {
		"extend" : ["common"],
    	"include" : ["blueprint.*", "designer.*"],
    	"exclude" : ["designer.simulation.*"]
    },
    "build" :
    {
    	"extend" : ["common"],
    	"include" : ["blueprint.*", "designer.*"],
    	"exclude" : ["designer.simulation.*"]
    },
    "source-script":{
      "compile-options":{
        "uris":{
          "add-nocache-param":false
        }
      }
    }
  }
}
