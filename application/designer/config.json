{
    "name"    : "designer",

    "include" :
    [
    {
        "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
    ],

    "export" :
    [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
    ],

    "let" :
    {
        "APPLICATION"  : "designer",
        "QOOXDOO_PATH" : "../../../../../qooxdoo-1.0.1-sdk/",
        "QXTHEME"      : "designer.theme.Theme",
        "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
        "LOCALES"      : [ "en" ],
        "ROOT"         : "."
    },

    "jobs" :
    {
        "libraries" : 
        {
            "library" :
            [
            {
                "manifest"   : "../../framework/blueprint/Manifest.json",
                "namespace"  : "blueprint"
            }
            ]
        },
        "source" :
        {
            "extend" : ["common"],
            "include" : ["blueprint.*", "designer.*"]
        },
        "build" :
        {
            "extend" : ["common"],
            "include" : ["blueprint.*", "designer.*"],
            "compile-dist" :
            {
                "code"  :
                {
                    "optimize" : ["basecalls", "privates", "strings"]
                }
            }
        }
    }
}
