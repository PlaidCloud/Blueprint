{
    "name"    : "blueprint",

    "include" :
    [
    {
        "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
    ],

    "export" :
    [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "test",
    "test-source",
    "translation"
    ],

    "let" :
    {
        "APPLICATION"  : "blueprint",
        "QOOXDOO_PATH" : "../../../../../qooxdoo-0.8.3-sdk/",
        "QXTHEME"      : "blueprint.theme.Ninja",
        "API_EXCLUDE"  : ["qx.legacy.*","qx.test.*"],
        "LOCALES"      : [ "en" ],
        "ROOT"         : "."
    },
    "jobs" :
    {
        "source" :
        {
            "extend" : ["common"],
            "include" : ["blueprint.*", "plaid.*"]
        },
        "build" :
        {
            "extend" : ["common"],
            "include" : ["blueprint.*", "plaid.*"],
            "compile-dist" :
            {
                "code"  :
                {
                    "optimize" : ["basecalls", "privates", "strings"]
                }
            }
        }
    }
}
